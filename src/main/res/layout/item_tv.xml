<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/radius"
    android:layout_marginTop="@dimen/radius"
    android:layout_marginRight="@dimen/radius"
    app:cardCornerRadius="@dimen/radius"
    app:cardElevation="@dimen/elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_station"
                android:layout_width="@dimen/player_height_80dp"
                android:layout_height="@dimen/player_height_80dp"
                android:padding="@dimen/icon_padding_15dp"
                android:src="@drawable/ic_holder" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_station"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_marginRight="@dimen/dp5"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:maxLines="2"
                    android:minLines="2"
                    android:text="Name"
                    android:textColor="@color/md_black_1000"
                    android:textSize="@dimen/text_size_medium" />

                <TextView
                    android:id="@+id/txt_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp5"
                    android:layout_weight="1"
                    android:fontFamily="@font/font"
                    android:gravity="right|center"
                    android:maxLines="2"
                    android:minLines="2"
                    android:text="Live Now"
                    android:textColor="@color/md_red_500"
                    android:textSize="@dimen/dp10" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>