<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="today.khmerpress.core">

    <application>
        <activity
            android:name="com.khmerpress.core.features.activities.ChannelActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.khmerpress.core.features.activities.TVPlayerActivity"
            android:configChanges="locale|screenSize|screenLayout|fontScale|orientation"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.khmerpress.core.features.activities.ATVPlayerActivity"
            android:configChanges="locale|screenSize|screenLayout|fontScale|orientation"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme" />

        <property
            android:name="android.adservices.AD_SERVICES_CONFIG"
            android:resource="@xml/gma_ad_services_config"
            tools:replace="android:resource" />

    </application>
</manifest>